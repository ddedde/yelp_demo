<div class="page-header">
  <h1>
    Restaurants
    <a href="/restaurants/new" class="btn btn-lg btn-success">New Restaurant</a>
  </h1>
</div><div class="row mb-1">
  <div class="col-md-12">
    <%= search_form_for @q, :class => collapse_search_form, :id => "restaurants_filters" do |f| %>
      <p class="lead">Narrow results:</p>

        <div class="form-group">
    <%= f.label :name_cont, "Name contains" %>
    <%= f.text_field :name_cont, :class => "form-control", :placeholder => "Name contains" %>
  </div>

<div class="form-group">
    <%= f.label :description_cont, "Description contains" %>
    <%= f.text_field :description_cont, :class => "form-control", :placeholder => "Description contains" %>
  </div>

<div class="form-group">
    <%= f.label :lng_cont, "Lng contains" %>
    <%= f.text_field :lng_cont, :class => "form-control", :placeholder => "Lng contains" %>
  </div>

<div class="form-group">
    <%= f.label :lat_cont, "Lat contains" %>
    <%= f.text_field :lat_cont, :class => "form-control", :placeholder => "Lat contains" %>
  </div>

<div class="form-group">
    <%= f.label :price_cont, "Price contains" %>
    <%= f.text_field :price_cont, :class => "form-control", :placeholder => "Price contains" %>
  </div>

<div class="form-group">
    <%= f.label :number_of_reviews_cont, "Number of reviews contains" %>
    <%= f.text_field :number_of_reviews_cont, :class => "form-control", :placeholder => "Number of reviews contains" %>
  </div>

<div class="form-group">
    <%= f.label :total_stars_cont, "Total stars contains" %>
    <%= f.text_field :total_stars_cont, :class => "form-control", :placeholder => "Total stars contains" %>
  </div>

<div class="form-group">
    <%= f.label :neighborhood_cont, "Neighborhood contains" %>
    <%= f.text_field :neighborhood_cont, :class => "form-control", :placeholder => "Neighborhood contains" %>
  </div>

<div class="form-group">
    <%= f.label :address_cont, "Address contains" %>
    <%= f.text_field :address_cont, :class => "form-control", :placeholder => "Address contains" %>
  </div>

<div class="form-group">
          <%= f.label :created_at, "Created at" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='created_atgteqPicker'>
                  <%= f.text_field :created_at_gteq, :class => "form-control", :placeholder => "Created at greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='created_atlteqPicker'>
                  <%= f.text_field :created_at_lteq, :class => "form-control", :placeholder => "Created at less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#created_atgteqPicker').datetimepicker({
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atlteqPicker').datetimepicker({
                  useCurrent: false,
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atgteqPicker').on("dp.change", function (e) {
                  $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#created_atlteqPicker').on("dp.change", function (e) {
                  $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

        <div class="form-group">
      <%= f.label :tags_name_cont, "Tag name contains" %>
      <%= f.text_field :tags_name_cont, :class => "form-control", :placeholder => "Tag name contains" %>
    </div>

<div class="form-group">
      <%= f.label :reviewers_email_cont, "User email contains" %>
      <%= f.text_field :reviewers_email_cont, :class => "form-control", :placeholder => "User email contains" %>
    </div>

<div class="form-group">
      <%= f.label :owners_email_cont, "User email contains" %>
      <%= f.text_field :owners_email_cont, :class => "form-control", :placeholder => "User email contains" %>
    </div>

      <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

      <a href="/restaurants" class="btn btn-default btn-block mb-1">Clear filters</a>
    <% end %>
    <a class="btn btn-default btn-block mb-1" data-toggle="collapse" href="#restaurants_filters">
      Show Filters
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Name</th>
        <th>Address</th>
        <th>Neighborhood</th>
        <th>Total stars</th>
        <th>Number of reviews</th>
        <th>Price</th>
        <th>Lat</th>
        <th>Lng</th>
        <th>Description</th>
        <th>Actions</th>
      </tr>

      <% @restaurants.each do |restaurant| %>
      <tr>
        <td><%= restaurant.name %></td>
        <td><%= restaurant.address %></td>
        <td><%= restaurant.neighborhood %></td>
        <td><%= restaurant.total_stars %></td>
        <td><%= restaurant.number_of_reviews %></td>
        <td><%= restaurant.price %></td>
        <td><%= restaurant.lat %></td>
        <td><%= restaurant.lng %></td>
        <td><%= restaurant.description %></td>
        <td>
          <a href="/restaurants/<%= restaurant.id %>" class="btn btn-primary">Show</a>
          <a href="/restaurants/<%= restaurant.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_restaurant/<%= restaurant.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @restaurants, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
